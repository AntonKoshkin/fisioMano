$bxb
	box-sizing border-box

$column
	if (grid-type == inline)
		display inline-block
		vertical-align top
	if (grid-type == float)
		display block
		float left

	box-sizing border-box
	position relative
	min-height 1px

$clearfix
	&:before
	&:after
		display table
		content ''

	&:after
		clear both

$row
	if (grid-type == inline)
		font-size 0
	else if (grid-type == float)
		@extend $clearfix

.container
	margin-left auto
	margin-right auto

.centered
	text-align center

.righted
	text-align right

.lefted
	text-align left

.push-to-right
	float right

.push-to-left
	float left